{
  "version": 2,
  "installCommand": "npm ci --no-audit --no-fund",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "functions": {
    "api/**/*.{js,ts}": { "runtime": "nodejs20.x" }
  },
  "routes": [
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/(.*\\.(css|js|ico|png|svg|jpg|jpeg|gif|webp|json))", "dest": "/$1" },
    { "src": "/.*", "dest": "/index.html" }
  ]
}
